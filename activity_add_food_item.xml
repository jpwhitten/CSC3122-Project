<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.mantarakk.pantree.AddFoodItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name: "
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/add_food_item_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/add_food_item_weight"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorWhite"/>

            <Spinner
                android:id="@+id/add_food_item_wieght_picker"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/colorWhite">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serving size: "
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/add_food_item_serving_size"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorWhite"/>

            <Spinner
                android:id="@+id/add_food_item_serving_size_picker"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/colorWhite">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs per serving: "
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/add_food_item_cps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protien per serving: "
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/add_food_item_pps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat per serving: "
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/add_food_item_fps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>


        <Button
            android:id="@+id/add_food_item_add_food_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add food"/>

    </LinearLayout>

</RelativeLayout>
